server:
  port: 8080

eureka:
  instance:
    hostname: localhost

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: forex-service
          uri: http://localhost:8000
          predicates:
            - Path=/currency-exchange/**
        - id: currency-conversion-service
          uri: http://localhost:8100
          predicates:
            - Path=/currency/**
